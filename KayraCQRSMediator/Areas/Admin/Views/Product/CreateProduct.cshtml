@model CreateProductCommand
@{
    ViewData["Title"] = "CreateProduct";
}
<h3>Yeni Ürün Ekle</h3>

<form method="post">
    <label>Ürün Adı</label>
    <input type="text" asp-for="ProductName" class="form-control" />
    <span asp-validation-for="ProductName" class="text-danger"></span>
    <br />
    <label>Ürün Görseli</label>
    <input type="text" asp-for="ImageUrl" class="form-control" />
    <span asp-validation-for="ImageUrl" class="text-danger"></span>
    <br />
    <label>Ürün Fiyatı</label>
    <input type="number" asp-for="ProductPrice" class="form-control" />
    <span asp-validation-for="ProductPrice" class="text-danger"></span>
    <br />
    <label>Kategori</label>
    <select asp-for="CategoryId" class="form-control" asp-items="@ViewBag.Categories">
        <option disabled selected>Kategori Seçiniz</option>
    </select>
    <span asp-validation-for="CategoryId" class="text-danger"></span>
    <br />

    <button class="btn btn-primary">Kaydet</button>

</form>